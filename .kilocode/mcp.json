{
  "mcpServers": {
    "next-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "next-devtools-mcp@latest"
      ],
      "alwaysAllow": [
        "browser_eval",
        "enable_cache_components",
        "init",
        "nextjs_docs",
        "nextjs_index",
        "nextjs_call",
        "upgrade_nextjs_16"
      ],
      "disabled": false
    },
    "shadcn": {
      "command": "npx",
      "args": [
        "shadcn@latest",
        "mcp"
      ]
    }
  }
}